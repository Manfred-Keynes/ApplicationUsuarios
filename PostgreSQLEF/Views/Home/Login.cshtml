@model PostgreSQLEF.Models.DB.Usuario
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <div class="container py-5" id="containerRegistrar">
        <div class="row">
                    <div class="col-6">
            <img class="img-fluid" src="~/css/securiry.png" />
        </div>
        <div class="col-6">
            @using (Html.BeginForm("Login", "Home", FormMethod.Post))
            {
                <h3>Acceso a Usuarios</h3>

                <div class="container" id="containerlogin">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <div class="col-md-12">
                                 <label for="Usuario">Nombre de Usuario</label><br>
                                @Html.EditorFor(model => model.Usuario1, new {htmlAttributes = new {@class = "form-control", @placeholder="Usuario"}})
                                @Html.ValidationMessageFor(model => model.Usuario1, "" , new {@class = "text-danger"})
                            </div>
                        </div>

                        <div class="form-group mb-2">
                            <div class="col-md-12">
                               <label for="Contraseña">Contraseña</label><br>
                                @Html.EditorFor(model => model.Contrasenia, new {htmlAttributes = new {@class = "form-control", @placeholder="**********"}})
                                @Html.ValidationMessageFor(model => model.Contrasenia, "" , new {@class = "text-danger"})
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-md-2">
                                <input type="submit" value="Login" class="btn btn-primary" />
                            </div>
                        </div>
                    </form>
                </div>

            }

        </div>
        </div>

    </div>
</body>



