@model PostgreSQLEF.Models.DB.Usuario
@{
    ViewData["Title"] = "Crear Nuevo Usuario";
}

<h1 class="text-center">CRUD USUARIOS</h1>

<div class="row mt-4">
    <div class="col-12">
        <div class="card border">
            <div class="card-header">
                <h3><strong>Crear un Nuevo Usuario</strong></h3>
            </div>
            <div class="container">
                <div class="card-body">
                    <form asp-action="Crear">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Nombre" class="control-label"></label>
                            <input asp-for="Nombre" class="form-control" placeholder="Nombre completo" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Apellido" class="control-label"></label>
                            <input asp-for="Apellido" class="form-control" placeholder="Nombre completo" />
                            <span asp-validation-for="Apellido" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Telefono" class="control-label"></label>
                            <input asp-for="Telefono" class="form-control" placeholder="Ejemplo: 78391548" />
                            <span asp-validation-for="Telefono" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Puesto" class="control-label"></label>
                            <input asp-for="Puesto" class="form-control" placeholder="Ejemplo: 58015779" />
                            <span asp-validation-for="Puesto" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="alguien@ejemplo.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Contrasenia" class="control-label"></label>
                            <input asp-for="Contrasenia" class="form-control" placeholder="Debe contener al menos Una letra Mayuscula" />
                            <span asp-validation-for="Contrasenia" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-8">
                                <label asp-for="FechaNacimiento" class="control-label"></label>
                                <input id="FechaNacimiento" type="text" asp-for="FechaNacimiento" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="form-group mt-3">
                            <button type="submit" class="btn btn-success"><i class="bi bi-person-fill"></i> Crear Usuario</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
<script>
    $(function (){
        $('#FechaNacimiento').datepicker({
            changeMont:true,
            changeYear:true,
            yearRange:"1500:2022",
            dateFormat:"yy-mm-dd"
        }).datepicker("setDate", new Date())
    })
</script>
}