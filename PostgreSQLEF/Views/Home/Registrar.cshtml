@model PostgreSQLEF.Models.DB.Usuario

@{
    ViewData["Title"] = "Registrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<body>
    <div class="container py-5" id="containerRegistrar">
        <div class="row">
            <div class="col-5">
                @using (Html.BeginForm("Registrar", "Home", FormMethod.Post))
                {
                    <h3>Registrate</h3>

                    <div class="container mr-5">
                        <form class="form-horizontal">
                            <div class="form-group mt-3">
                                <div class="col-md-12">
                                    <div class="input-group">
                                        @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-12 mb-2" })
                                        @Html.EditorFor(model => model.Nombre, new {htmlAttributes = new {@class = "form-control"}})
                                        @Html.ValidationMessageFor(model => model.Nombre, "" , new {@class = "text-danger"})
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.LabelFor(model => model.Apellido, htmlAttributes: new { @class = "control-label col-md-12 mb-2" })
                                    @Html.EditorFor(model => model.Apellido, new {htmlAttributes = new {@class = "form-control"}})
                                    @Html.ValidationMessageFor(model => model.Apellido, "" , new {@class = "text-danger"})
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.LabelFor(model => model.Telefono, htmlAttributes: new { @class = "control-label col-md-12 mb-2" })
                                    @Html.EditorFor(model => model.Telefono, new {htmlAttributes = new {@class = "form-control"}})
                                    @Html.ValidationMessageFor(model => model.Telefono, "" , new {@class = "text-danger"})
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.LabelFor(model => model.Puesto, htmlAttributes: new { @class = "control-label col-md-12 mb-2" })
                                    @Html.EditorFor(model => model.Puesto, new {htmlAttributes = new {@class = "form-control"}})
                                    @Html.ValidationMessageFor(model => model.Puesto, "" , new {@class = "text-danger"})
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-12 mb-2" })
                                    @Html.EditorFor(model => model.Email, new {htmlAttributes = new {@class = "form-control"}})
                                    @Html.ValidationMessageFor(model => model.Email, "" , new {@class = "text-danger"})
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.LabelFor(model => model.Contrasenia, htmlAttributes: new { @class = "control-label col-md-12 mb-2" })
                                    @Html.EditorFor(model => model.Contrasenia, new {htmlAttributes = new {@class = "form-control"}})
                                    @Html.ValidationMessageFor(model => model.Contrasenia, "" , new {@class = "text-danger"})
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.LabelFor(model => model.Usuario1, htmlAttributes: new { @class = "control-label col-md-12 mb-2" })
                                    @Html.EditorFor(model => model.Usuario1, new {htmlAttributes = new {@class = "form-control"}})
                                    @Html.ValidationMessageFor(model => model.Usuario1, "" , new {@class = "text-danger"})
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.LabelFor(model => model.FechaCreacion, htmlAttributes: new { @class = "control-label col-md-12 mb-2" })
                                    @Html.EditorFor(model => model.FechaCreacion, new {htmlAttributes = new {@class = "form-control"}})
                                    @Html.ValidationMessageFor(model => model.FechaCreacion, "" , new {@class = "text-danger"})
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-group">
                                    <label asp-for="FechaNacimiento" class="control-label"></label>
                                    <input asp-for="FechaNacimiento" class="form-control" />
                                    <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-2">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                </div>
                            </div>
                        </form>
                    </div>

                }
            </div>
            <div class="col-7">
                <img class="img-fluid" src="~/css/securiry.png" />
            </div>
        </div>
    </div>
</body>


